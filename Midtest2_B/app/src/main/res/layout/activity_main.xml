<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:stretchColumns="*"
    tools:context=".MainActivity">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수면"/>
            <EditText
                android:id="@+id/sleepTime"
                android:layout_column="2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_column="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시간"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <CheckBox
                android:id="@+id/cbCode"
                android:layout_column="0"/>
            <TextView
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코딩"/>
            <EditText
                android:id="@+id/codeTime"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_column="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"/>
            <CheckBox
                android:id="@+id/cbRead"
                android:layout_column="4"/>
            <TextView
                android:layout_column="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="독서"/>
            <EditText
                android:id="@+id/readTime"
                android:layout_column="6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_column="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <CheckBox
                android:id="@+id/cbEng"
                android:layout_column="0"/>
            <TextView
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영어"/>
            <EditText
                android:id="@+id/engTime"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_column="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"/>
            <CheckBox
                android:id="@+id/cbExer"
                android:layout_column="4"/>
            <TextView
                android:layout_column="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동"/>
            <EditText
                android:id="@+id/exerTime"
                android:layout_column="6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_column="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_span="2"
                android:text="이상형"
                android:layout_gravity="center|right"/>
            <Spinner
                android:id="@+id/spinner"
                android:layout_gravity="center_horizontal"
                android:layout_span="6"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/btnResult"
                android:layout_span="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="처리결과"/>
        </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txt1"
            android:layout_span="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 나는 ?시간 잠을 잡니다!"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txt2"
            android:layout_span="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. 나는 꿈을 위해 ?시간 투자합니다!"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txt3"
            android:layout_span="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. 나의 이상형은 ??? 입니다!"/>
    </TableRow>
    <LinearLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
</TableLayout>